/dts-v1/;
/plugin/;

#include <dt-bindings/board/am335x-bbw-bbb-base.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pinctrl/am33xx.h>

/ {
	compatible = "ti,beaglebone", "ti,beaglebone-black", "ti,beaglebone-green";

	/* identification */
	part-number = "IGLA";
	version = "00A0";

	/* state the resources this cape uses */
	exclusive-use =
		/* the pins header uses */
		"P8.19", // OneWire

        // GPS:
        "uart4", // uart   
        "P9.13", // uart4_txd
        "P9.11", // uart4_rxd
        "P9.12", "gpio1_28", // gps_on    

        // LEDs:
		"P8.07", "gpio2_2", // led1
		"P8.10", "gpio2_4", // led3
		"P8.09", "gpio2_5", // led4

        // SX1276:
        "spi0", // spi
		"P9.18", // MOSI
		"P9.21", // MISO
		"P9.22", // SCK
		"P9.26", "gpio0_14", // NSS0
		"P9.23", "gpio1_17", // NSS1
		"P9.16", "gpio1_19"; // NSS2

	/*
	 * Free up the pins used by the cape from the pinmux helpers.
	 */
	fragment@0 {
		target = <&ocp>;
		__overlay__ {
            // OneWire:
			P8_19_pinmux { status = "disabled"; };

            // GPS:
            P9_12_pinmux { status = "disabled"; };  /* gps_on */
            P9_13_pinmux { status = "disabled"; };  /* uart4_txd */
            P9_11_pinmux { status = "disabled"; };  /* uart4_rxd */

            // LEDs:
			P8_07_pinmux { status = "disabled"; };
			P8_10_pinmux { status = "disabled"; };
			P8_09_pinmux { status = "disabled"; };

            // SX1276:
			P9_26_pinmux { status = "disabled"; }; // NSS0
			P9_23_pinmux { status = "disabled"; }; // NSS1
			P9_16_pinmux { status = "disabled"; }; // NSS2

			P9_18_pinmux { status = "disabled"; }; // MOSI
			P9_21_pinmux { status = "disabled"; }; // MISO
			P9_22_pinmux { status = "disabled"; }; // SCK
		};
	};

	fragment@1 {
		target = <&am33xx_pinmux>;
		__overlay__ {
			led_pins: pinmux_led_pins { // was 0xf
				pinctrl-single,pins = < 
					BONE_P9_12 (PIN_OUTPUT | MUX_MODE7)

					BONE_P8_07 (PIN_OUTPUT | MUX_MODE7)
					BONE_P8_10 (PIN_OUTPUT | MUX_MODE7)
					BONE_P8_09 (PIN_OUTPUT | MUX_MODE7)

                    BONE_P9_26 (PIN_OUTPUT | MUX_MODE7)
					BONE_P9_23 (PIN_OUTPUT | MUX_MODE7)
					BONE_P9_16 (PIN_OUTPUT | MUX_MODE7)
				>;
			};

			dallas_w1_pins: pinmux_dallas_w1_pins {
				pinctrl-single,pins = < 
					BONE_P8_19 0x37
				>;
			};

            bb_uart4_pins: pinmux_bb_uart4_pins {
                pinctrl-single,pins = <
                    BONE_P9_13 (PIN_OUTPUT | MUX_MODE6)     // gpmc_wpn.uart4_txd_mux2
                    BONE_P9_11 (PIN_INPUT  | MUX_MODE6)     // gpmc_wait0.uart4_rxd_mux2
                >;
            };

            sx1276_pins: pinmux_sx1276_pins {
                pinctrl-single,pins = <
                    BONE_P9_18 (PIN_OUTPUT_PULLUP | MUX_MODE0)     // MOSI
                    BONE_P9_21 (PIN_INPUT_PULLUP  | MUX_MODE0)     // MISO
                    BONE_P9_22 (PIN_OUTPUT_PULLUP | MUX_MODE0)     // SCK
                >;
            };
		};
	};

	fragment@2 {
		target-path="/";
		__overlay__ {
			onewire {
				status = "okay";
				pinctrl-names = "default";
				pinctrl-0 = <&dallas_w1_pins>;

				compatible = "w1-gpio";
				gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>;
			};
		};
	};

    fragment@3 {
        target = <&uart4>;
        __overlay__ {
            status = "okay";
            pinctrl-names = "default";
            pinctrl-0 = <&bb_uart4_pins>;
        };
    };

    fragment@4 {
        target = <&spi0>;
        __overlay__ {
             #address-cells = <1>;
             #size-cells = <0>;
            
             status = "okay";
             pinctrl-names = "default";
             pinctrl-0 = <&sx1276_pins>;

             spidev@0 {
                 spi-max-frequency = <24000000>;
                 reg = <0>;
                 compatible = "linux,spidev";
            };
        };
    };

	fragment@5 {
		target = <&ocp>;
		__overlay__ {
			led_pins_helper {
				compatible = "gpio-leds";
				pinctrl-names = "default";
				pinctrl-0 = <&led_pins>;
				gps {
					label = "_gps";
					gpios = <&gpio1 28 0>; /* flag 1 means active low */
					linux,default-trigger = "none";
					default-state = "on";
				};
				
				led-1 {
					label = "power";
					gpios = <&gpio2 2 0>; /* flag 1 means active low */
					linux,default-trigger = "none";
					default-state = "on";
				};
				led-3 {
					label = "alarm";
					gpios = <&gpio2 4 0>; /* flag 1 means active low */
					linux,default-trigger = "none";
					default-state = "off";
				};
				led-4 {
					label = "radio";
					gpios = <&gpio2 5 0>; /* flag 1 means active low */
					linux,default-trigger = "none";
					default-state = "off";
				};

				module0 {
					label = "_module0";
					gpios = <&gpio0 14 1>; /* flag 1 means active low */
					linux,default-trigger = "none";
					default-state = "off";
				};
				module1 {
					label = "_module1";
					gpios = <&gpio1 17 1>; /* flag 1 means active low */
					linux,default-trigger = "none";
					default-state = "off";
				};
				module2 {
					label = "_module2";
					gpios = <&gpio1 19 1>; /* flag 1 means active low */
					linux,default-trigger = "none";
					default-state = "off";
				};
			};
			
		};
	};
};